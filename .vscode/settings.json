{
  "eslint.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Форматирование через Prettier
  "editor.formatOnSave": true, // Форматировать при сохранении
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.requireConfig": false, //Без конфига не будет форматировать Требовать конфиг Prettier
  "prettier.useEditorConfig": false // Игнорировать .editorconfig (если не нужен)
}
